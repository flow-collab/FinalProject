@page
@model QueueCheckIn.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<fieldset class="account">

    <h1>Register</h1>
    <br />

    <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal">
        <h4>Create a new account.</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Register.Email" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="email" asp-for="Register.Email" class="form-control" />
                <span asp-validation-for="Register.Email" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="Register.Password" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="password" asp-for="Register.Password" class="form-control" />
                <span asp-validation-for="Register.Password" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="Register.ConfirmPassword" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="password" asp-for="Register.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Register.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="Register.BarberNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="text" asp-for="Register.BarberNumber" class="form-control" />
                <span asp-validation-for="Register.BarberNumber" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </div>
    </form>
</fieldset>
