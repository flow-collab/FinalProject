@page
@model QueueCheckIn.Pages.Employee.ListPast30DayModel
@{
}

<h1>Currently Check Ins Last 30 Days</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Check-In ID
            </th>
            <th>
                Name
            </th>
            <th>
                Email Address
            </th>
            <th>
                Arrival Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var checkin in Model.CheckIns)
        {
                <tr>
                    <td>
                        <h5>@checkin.Id</h5>
                    </td>
                    <td>
                        <h5>@checkin.Name</h5>
                    </td>

                    <td>
                        <h5>@checkin.PhoneNumber</h5>
                    </td>

                    <td>
                        <h5>@checkin.CheckInDate.ToShortDateString()</h5>
                    </td>

                </tr>
        }

    </tbody>
</table>
