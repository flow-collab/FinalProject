@page
@model QueueCheckIn.Pages.Employee.ListAllModel
@{
}
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email Address
            </th>
            <th>
                Arrival Date
            </th>
            <th>
                Booking Type
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var checkin in Model.CheckIns)
        {
                <tr>
                    <td>
                        <h5>@checkin.Name</h5>
                    </td>

                    <td>
                        <h5>@checkin.PhoneNumber</h5>
                    </td>

                    <td>
                        <h5>@checkin.CheckInDate.ToShortDateString()</h5>
                    </td>
                </tr>
        }

    </tbody>
</table>