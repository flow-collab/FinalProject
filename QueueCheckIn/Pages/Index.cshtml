@*@page tells asp.net core that this is a razor page*@
@page
@*@model specifies the model for this display template*@
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<html>
<body>
    <div class="text-center">
        <h2 class="alert alert-info" role="alert">@Model.Message</h2>
        <p>
            <h4>

                @await Component.InvokeAsync("WaitCount", new { status = Status.Waiting })

                @await Component.InvokeAsync("WaitingTime")
            </h4>
        </p>
    </div>

    <div class="container">
        <div class="col-md-12">
            <div class="col-sm-12 d-flex justify-content-center">
                <div class="span2">
                    <img class="img-fluid" src="~/images/Logo.png" alt="CapStone Barber" />
                </div>
                <div class="span2 d-flex justify-content-center text-center">
                    <h5>
                        If you wish to join the queue please click the button below, submit your details and we will email you alerting you to come back for your appointment.
                        <br /><br />Thank you and see you shortly.
                    </h5>
                </div>
            </div>
            <div class="col-sm-12 d-flex justify-content-center">
                <a asp-page="/CheckIns/Add" class="btn btn-info btn-lg active" role="button" aria-pressed="true">Join The Queue</a>

            </div>
        </div>

    </div>

</body>
</html>





