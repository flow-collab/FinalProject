        From : <input type="text" asp-for="email.From" asp-item="capstonebarber@gmail.com" /><br />
        To : <input type="text" asp-for="email.To" /><br />
        Subject : <input type="text" asp-for="email.Subject" /><br />
        Body : <textarea asp-for="email.Body"></textarea><br />
        <button asp-page-handler="SendEmail">Send Email</button>
    </p>*@

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="Submit" class="btn btn-primary">Update</button>
            <a asp-page="/CheckIns/Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
         
</form>