@page "{id:min(1)?}"
@model QueueCheckIn.Pages.CheckIns.EditModel
@{
    ViewData["Title"] = "Edit";
    var pageHeader = Model.CheckIn.Id > 0 ? "Edit" : "Create";
}

<>Edit<@pageHeader>

<form method="post" class="mt-3">
      <input hidden asp-for="CheckIn.Id"/>
    
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <label asp-for="CheckIn.Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CheckIn.Name" class="form-control" placeholder="Name">
            <span asp-validation-for="CheckIn.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CheckIn.PhoneNumber" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CheckIn.PhoneNumber" class="form-control" placeholder="Phone Number">
            <span asp-validation-for="CheckIn.PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CheckIn.Status" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="CheckIn.Status" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Status>()">
                <option value="">Please select</option>
            </select>
        </div>
    </div>

